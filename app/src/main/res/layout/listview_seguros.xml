<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linearCardView"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/white"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">
            <TextView
                android:id="@+id/cardTitulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/rectanguloSplash"
                android:textAlignment="center"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:padding="5dp"
                />
            <TextView
                android:id="@+id/div1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/backGroundAlphaNegro"
                android:layout_below="@+id/cardTitulo"
                />
            <TextView
                android:id="@+id/cardPoliza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Póliza:"
                android:textSize="16sp"
                android:textColor="@color/grisCard"
                android:layout_below="@+id/div1"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:paddingLeft="10dp"/>
            <TextView
                android:id="@+id/cardPolizaTexto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/grisCard"
                android:layout_below="@+id/div1"
                android:layout_toRightOf="@+id/cardPoliza"
                android:layout_margin="10dp"/>
            <TextView
                android:id="@+id/cardAseguradora"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aseguradora:"
                android:textSize="16sp"
                android:textColor="@color/grisCard"
                android:layout_below="@+id/cardPoliza"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:paddingLeft="10dp"/>
            <TextView
                android:id="@+id/cardAseguradoraTexto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/grisCard"
                android:layout_below="@+id/cardPoliza"
                android:layout_toRightOf="@id/cardAseguradora"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/cardCobertura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha Cobertura:"
                android:textSize="16sp"
                android:textColor="@color/grisCard"
                android:layout_below="@+id/cardAseguradora"
                android:layout_alignParentLeft="true"
                android:layout_margin="10dp"
                android:paddingLeft="10dp"/>
            <TextView
                android:id="@+id/cardCoberturaTexto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="16sp"
                android:textColor="@color/grisCard"
                android:layout_below="@+id/cardAseguradora"
                android:layout_toRightOf="@id/cardCobertura"
                android:layout_margin="10dp"/>
            <Button
                android:id="@+id/cardBoton"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="VER MÁS"
                android:background="@color/rectanguloSplash"
                android:layout_below="@+id/cardCobertura"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="7dp"


                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>