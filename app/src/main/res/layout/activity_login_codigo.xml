<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_deverdad_blur_rojo">
    <RelativeLayout
        android:id="@+id/frameLoginLogoCodigo"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_gravity="center"
        >
        <ImageView
            android:id="@+id/LoginLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/firma_white_new"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingLeft="45dp"
            android:paddingRight="45dp"
            android:paddingBottom="20dp"
            android:paddingTop="65dp"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/textViewLoginCodigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backGroundAlphaNegro"
        android:text="@string/textViewLoginCodigo"
        android:textSize="15sp"
        android:textColor="@android:color/white"
        android:textColorHint="@color/textoLoginCodigo"
        android:textAlignment="center"
        android:layout_marginTop="20dp"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:layout_gravity="center"
        />
        
    <EditText
        android:id="@+id/editTextLoginCodigo"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:hint="Ej. 12345678901011"
        android:inputType="number"
        android:lines="1"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:background="@drawable/edittext_bg"
        android:paddingBottom="15dp"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <Button
            android:id="@+id/buttonLoginCodigo"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/entrar"
            android:textColor="@color/loginButton"
            android:background="@drawable/button_radius"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            style="@style/Widget.AppCompat.Button.Colored"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_marginTop="50dp"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/textViewFooterLoginCodigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textAlignment="center"
            android:textColor="@color/textoLoginCodigo"
            android:textSize="17sp"
            android:text="@string/footerLoginCodigo"
            android:layout_marginBottom="45dp"/>

    </RelativeLayout>


</LinearLayout>