<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@android:color/white">

    <TextView
        android:layout_width="1dp"
        android:layout_height="70dp"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/listViewNotificacionesIcono"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"



        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:background="@android:color/transparent">

        <TextView
            android:id="@+id/listViewNotificacionesTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/listViewNotificacionTitulo"
            android:textSize="14dp"
            android:paddingTop="10dp"/>

        <TextView
            android:id="@+id/listViewNotificacionesSubtitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/listViewNotificacionSubtitulo"
            android:textSize="13sp"
            android:paddingBottom="10dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/listViewNotificacionesFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:textColor="@color/listViewNotificacionValor"
        android:textSize="12sp"
       />
</LinearLayout>